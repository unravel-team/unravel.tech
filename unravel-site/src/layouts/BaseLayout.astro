---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'AI Consulting | Enterprise Solutions', 
  description = 'Transform your business with cutting-edge AI consulting services. Expert guidance in machine learning, natural language processing, and predictive analytics.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <header>
    <nav class="nav-bar">
      <div class="container">
        <div class="nav-content">
          <a href="/" class="logo">
            <img src="/logo.png" alt="Unravel - AI Consulting" class="logo-img">
          </a>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/talks">Talks</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <slot />
    
    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h4>AI Consulting</h4>
            <p class="text-muted">Enterprise AI solutions for modern businesses</p>
          </div>
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul class="footer-links">
              <li><a href="/">Home</a></li>
              <li><a href="/blog">Blog</a></li>
              <li><a href="/talks">Talks</a></li>
              <li><a href="#services">Services</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Contact</h4>
            <p class="text-muted">hello@aiconsulting.com</p>
          </div>
        </div>
        <div class="footer-bottom">
          <p class="text-muted">&copy; 2025 AI Consulting. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </main>
</body>
</html>

<style>
  /* Header & Navigation */
  header {
    background: var(--color-neutral-000);
    border-bottom: 1px solid var(--color-border);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    box-shadow: var(--shadow-xs);
  }

  .nav-bar {
    padding: var(--spacing-lg) 0;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .logo:hover {
    text-decoration: none;
    opacity: 0.85;
    transform: translateY(-1px);
  }

  .logo-img {
    height: 32px;
    width: auto;
    display: block;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .logo-img {
      height: 36px;
    }
  }

  @media (min-width: 1024px) {
    .logo-img {
      height: 40px;
    }
  }

  .nav-links {
    display: flex;
    gap: var(--spacing-xl);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: color var(--transition-base);
  }

  .nav-links a:hover {
    color: var(--color-primary-500);
    text-decoration: none;
  }

  /* Mobile Navigation */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }

  /* Main Content - Normal Scrolling */
  main {
    padding-top: 80px; /* Space for fixed header */
  }

  @media (min-width: 768px) {
    main {
      padding-top: 88px; /* Larger header on tablets */
    }
  }

  @media (min-width: 1024px) {
    main {
      padding-top: 92px; /* Larger header on desktop */
    }
  }

  /* Footer - Minimal Strip at Bottom */
  footer {
    background: var(--color-neutral-950);
    color: #C9D1D9;
    padding: var(--spacing-md) 0;
    min-height: auto;
    height: auto;
    margin-top: auto;
  }
  
  footer .container {
    width: 100%;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }

  .footer-section {
    flex: 0 1 auto;
  }

  .footer-section h4 {
    color: #C9D1D9;
    margin-bottom: 0;
    font-size: var(--text-sm);
    font-weight: 600;
  }

  .footer-section p {
    margin-bottom: 0;
    font-size: var(--text-xs);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .footer-links li {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .footer-links li:not(:last-child)::after {
    content: '|';
    color: #8B949E;
  }

  .footer-links a {
    color: #C9D1D9;
    transition: color var(--transition-base);
    font-size: var(--text-xs);
  }

  .footer-links a:hover {
    color: var(--color-primary-400);
    text-decoration: none;
  }

  .footer-bottom {
    display: none;
  }

  footer .text-muted {
    color: #8B949E;
  }

  /* Mobile Footer */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }
    
    .footer-section:nth-child(2) {
      order: -1;
    }
  }
</style>
