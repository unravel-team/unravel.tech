---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  author?: string;
  tags?: string[];
}

const { title, description, pubDate, author = 'AI Consulting Team', tags = [] } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(pubDate);
---

<BaseLayout title={`${title} | AI Consulting Blog`} description={description}>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <a href="/blog" class="back-link">&larr; Back to Blog</a>
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="post-author">By {author}</span>
          <span class="post-date">{formattedDate}</span>
        </div>
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="post-content">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: var(--spacing-3xl) 0;
  }

  .post-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-3xl);
    text-align: center;
  }

  .back-link {
    display: inline-block;
    color: var(--color-primary-700);
    font-weight: 600;
    margin-bottom: var(--spacing-lg);
    transition: all var(--transition-base);
    position: relative;
    padding-bottom: 2px;
  }
  
  .back-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--color-primary-500), var(--color-secondary-500));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-base);
  }

  .back-link:hover {
    color: var(--color-primary-600);
    text-decoration: none;
  }
  
  .back-link:hover::after {
    transform: scaleX(1);
  }

  .post-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-primary);
  }

  .post-meta {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: center;
    color: var(--color-text-tertiary);
    font-size: var(--text-sm);
    margin-bottom: var(--spacing-lg);
  }
  
  .post-author::before {
    content: "By ";
    font-weight: 400;
  }

  .post-tags {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: 16px;
    font-size: var(--text-xs);
    font-weight: 500;
    transition: all var(--transition-base);
  }
  
  .tag:first-child {
    background: var(--color-secondary-500);
    color: var(--color-neutral-000);
  }
  
  .tag:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 6px rgba(14, 159, 188, 0.2);
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
    background: var(--color-neutral-000);
    padding: var(--spacing-2xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .post-content :global(h2) {
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-lg);
    color: var(--color-primary-700);
  }

  .post-content :global(h3) {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-primary);
  }

  .post-content :global(p) {
    margin-bottom: var(--spacing-lg);
    line-height: var(--leading-relaxed);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
  }

  .post-content :global(li) {
    margin-bottom: var(--spacing-sm);
    line-height: var(--leading-relaxed);
  }
  
  .post-content :global(li::marker) {
    color: var(--color-primary-500);
  }
  
  .post-content :global(a) {
    color: var(--color-primary-700);
    font-weight: 600;
    text-decoration: underline;
    transition: color var(--transition-base);
  }
  
  .post-content :global(a:hover) {
    color: var(--color-primary-600);
  }

  .post-content :global(code) {
    background: var(--color-primary-100);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    color: var(--color-primary-800);
    font-weight: 500;
  }

  .post-content :global(pre) {
    background: var(--color-neutral-950);
    color: var(--color-neutral-100);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--spacing-lg);
    border-left: 4px solid var(--color-primary-500);
  }

  .post-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-secondary-500);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    color: var(--color-text-secondary);
    font-style: italic;
    background: var(--color-secondary-100);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-sm);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: var(--text-2xl);
    }

    .post-meta {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .post-content {
      padding: var(--spacing-lg);
    }
  }
</style>
