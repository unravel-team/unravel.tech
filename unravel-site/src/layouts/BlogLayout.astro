---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate: Date;
    author?: string;
    tags?: string[];
  }
}

const { title, description, pubDate, author = 'AI Consulting Team', tags = [] } = Astro.props.frontmatter;

// Convert pubDate string to Date object if needed
const dateObject = typeof pubDate === 'string' ? new Date(pubDate) : pubDate;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(dateObject);
---

<BaseLayout title={`${title} | AI Consulting Blog`} description={description}>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="post-author">{author}</span>
          <span class="meta-separator">â€¢</span>
          <span class="post-date">{formattedDate}</span>
        </div>
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="post-content">
        <slot />
      </div>

      <footer class="post-footer">
        <a href="/blog" class="footer-back-link btn btn-outline-primary">&larr; Back to Blog</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: var(--spacing-sm) 0;
  }

  .post-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-2xl);
    padding: var(--spacing-2xl) var(--spacing-lg);
    text-align: center;
    background: linear-gradient(135deg, rgba(108, 179, 63, 0.03) 0%, rgba(14, 159, 188, 0.03) 100%);
    border-radius: var(--radius-lg);
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-primary);
    line-height: var(--leading-tight);
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary-700) 0%, var(--color-secondary-600) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-footer {
    max-width: 800px;
    margin: var(--spacing-xl) auto 0;
    text-align: center;
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .footer-title {
    font-size: var(--text-lg);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
    font-weight: 600;
  }

  .footer-back-link {
    margin-top: var(--spacing-lg);
  }

  .post-meta {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
    justify-content: center;
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    margin-bottom: var(--spacing-lg);
    font-weight: 500;
  }
  
  .post-author {
    color: var(--color-primary-700);
    font-weight: 600;
  }

  .meta-separator {
    color: var(--color-text-tertiary);
    opacity: 0.5;
  }

  .post-date {
    color: var(--color-text-tertiary);
  }

  .post-tags {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--spacing-sm);
  }

  .tag {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: 20px;
    font-size: var(--text-xs);
    font-weight: 600;
    transition: all var(--transition-base);
    border: 2px solid transparent;
  }
  
  .tag:first-child {
    background: var(--color-secondary-500);
    color: var(--color-neutral-000);
    border-color: var(--color-secondary-600);
  }
  
  .tag:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(14, 159, 188, 0.25);
    border-color: var(--color-primary-500);
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
    background: var(--color-neutral-000);
    padding: var(--spacing-2xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .post-content :global(h2) {
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-lg);
    color: var(--color-primary-700);
  }

  .post-content :global(h3) {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-primary);
  }

  .post-content :global(p) {
    margin-bottom: var(--spacing-lg);
    line-height: var(--leading-relaxed);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-xl);
  }

  .post-content :global(li) {
    margin-bottom: var(--spacing-sm);
    line-height: var(--leading-relaxed);
  }
  
  .post-content :global(li::marker) {
    color: var(--color-primary-500);
  }
  
  .post-content :global(a) {
    color: var(--color-primary-700);
    font-weight: 600;
    text-decoration: underline;
    transition: color var(--transition-base);
  }
  
  .post-content :global(a:hover) {
    color: var(--color-primary-600);
  }

  .post-content :global(code) {
    background: var(--color-primary-100);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    color: var(--color-primary-800);
    font-weight: 500;
  }

  .post-content :global(pre) {
    background: var(--color-neutral-950);
    color: var(--color-neutral-100);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--spacing-lg);
    border-left: 4px solid var(--color-primary-500);
  }

  .post-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-secondary-500);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    color: var(--color-text-secondary);
    font-style: italic;
    background: var(--color-secondary-100);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-sm);
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: var(--spacing-xs) 0;
    }

    .post-header {
      margin-bottom: var(--spacing-lg);
      padding: var(--spacing-lg);
    }

    .post-title {
      font-size: var(--text-xl);
      margin-bottom: var(--spacing-md);
    }

    .post-meta {
      flex-direction: column;
      gap: var(--spacing-xs);
      margin-bottom: var(--spacing-md);
    }

    .meta-separator {
      display: none;
    }

    .post-tags {
      gap: var(--spacing-xs);
    }

    .tag {
      font-size: 0.7rem;
      padding: 0.25rem 0.625rem;
    }

    .post-footer {
      margin-top: var(--spacing-lg);
      padding-top: var(--spacing-md);
    }

    .footer-title {
      font-size: var(--text-base);
      margin-bottom: var(--spacing-sm);
    }

    .post-content {
      padding: var(--spacing-lg);
    }
  }
</style>
