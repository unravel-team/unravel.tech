---
interface Props {
  number: string;
  label: string;
  variant?: 'default' | 'gradient';
}

const { 
  number,
  label,
  variant = 'default'
} = Astro.props;
---

<div class={`bento-stat ${variant === 'gradient' ? 'stat-gradient' : ''}`}>
  <div class="bento-stat-number">{number}</div>
  <div class="bento-stat-label">{label}</div>
</div>

<style>
  .bento-stat {
    text-align: center;
    padding: 1.5rem;
    border-radius: var(--radius-md);
    background: var(--color-bg-white);
    border: var(--border-width) solid var(--color-border);
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .bento-stat:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
    border-color: var(--unravel-blue);
  }

  .bento-stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--unravel-green);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  /* Optional Gradient Variant */
  .bento-stat.stat-gradient {
    background: linear-gradient(135deg, 
      rgba(111, 191, 63, 0.05) 0%, 
      rgba(14, 159, 188, 0.05) 100%
    );
    border-color: var(--unravel-green);
  }

  .bento-stat.stat-gradient:hover {
    box-shadow: 0 4px 16px rgba(111, 191, 63, 0.2);
  }

  .bento-stat-label {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    font-weight: 500;
    line-height: 1.4;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .bento-stat {
      padding: 1.25rem;
    }

    .bento-stat-number {
      font-size: 2.5rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .bento-stat:hover {
      transform: none;
    }
  }
</style>
