---
interface Props {
  number: string;
  label: string;
  variant?: 'default' | 'gradient';
}

const { 
  number,
  label,
  variant = 'default'
} = Astro.props;
---

<div class={`bento-stat ${variant === 'gradient' ? 'stat-gradient' : ''}`}>
  <div class="bento-stat-number">{number}</div>
  <div class="bento-stat-label">{label}</div>
</div>

<style>
  .bento-stat {
    text-align: center;
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .bento-stat-number {
    font-size: 3rem;
    font-weight: 700;
    color: var(--unravel-green);
    line-height: 1;
    margin-bottom: 0.5rem;
  }


  .bento-stat-label {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    font-weight: 500;
    line-height: 1.4;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .bento-stat {
      padding: 1rem;
    }

    .bento-stat-number {
      font-size: 2.5rem;
    }
  }
</style>
