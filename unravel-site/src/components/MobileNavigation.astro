---
// Mobile Navigation Component - Thumb-Friendly Bottom Bar with Multi-Level Menus
interface Props {
  currentPath?: string;
  enableServices?: boolean;
}

const { currentPath = '/', enableServices = true } = Astro.props;

// Determine active state based on current path
const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};

// Check if Resources section is active (blog or talks)
const isResourcesActive = currentPath.startsWith('/blog') || currentPath.startsWith('/talks');
// Check if Services section is active
const isServicesActive = currentPath.startsWith('/services');
