---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TextReveal from '../../components/TextReveal';
import ScrollProgress from '../../components/ScrollProgress';
---

<ScrollProgress client:load />

<BaseLayout 
  title="Prototype to Production | AI Services | Unravel"
  description="Transform your AI prototype into an enterprise-ready production system in 90 days. Proven framework for scaling AI agents with 95% success rate."
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <TextReveal delay={200} client:load>
        <div class="breadcrumb">
          <a href="/services">Services</a> / <span>Prototype to Production</span>
        </div>
      </TextReveal>
      <TextReveal delay={400} client:load>
        <h1 class="hero-title">
          Your AI Agent Prototype ‚Üí<br/>
          <span class="gradient-text">Enterprise-Ready System</span><br/>
          in 90 Days
        </h1>
      </TextReveal>
      <TextReveal delay={600} client:load>
        <p class="hero-subtitle">
          We take your working prototype and transform it into a production-grade AI agent that scales with your business
        </p>
      </TextReveal>
      <TextReveal delay={800} client:load>
        <div class="hero-actions">
          <a href="mailto:hello@unravel.tech?subject=Prototype Assessment Request" class="btn btn-primary btn-lg">Get Free Prototype Assessment</a>
          <a href="#framework" class="btn btn-secondary btn-lg">See Our Framework</a>
        </div>
      </TextReveal>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="problem-section">
    <div class="container">
      <TextReveal client:load>
        <div class="problem-stat">
          <h2>92% of AI prototypes never make it to production</h2>
          <p>Here's why your prototype might be stuck:</p>
        </div>
      </TextReveal>

      <div class="problems-grid">
        <TextReveal delay={100} client:load>
          <div class="problem-card">
            <div class="problem-icon">‚ùå</div>
            <h3>Scalability Issues</h3>
            <p>Works for demos but crashes under real load</p>
          </div>
        </TextReveal>

        <TextReveal delay={200} client:load>
          <div class="problem-card">
            <div class="problem-icon">‚ùå</div>
            <h3>Poor Error Handling</h3>
            <p>No recovery mechanisms for edge cases</p>
          </div>
        </TextReveal>

        <TextReveal delay={300} client:load>
          <div class="problem-card">
            <div class="problem-icon">‚ùå</div>
            <h3>No Monitoring</h3>
            <p>Blind to performance and user experience</p>
          </div>
        </TextReveal>

        <TextReveal delay={400} client:load>
          <div class="problem-card">
            <div class="problem-icon">‚ùå</div>
            <h3>Security Gaps</h3>
            <p>Basic implementation without enterprise security</p>
          </div>
        </TextReveal>

        <TextReveal delay={500} client:load>
          <div class="problem-card">
            <div class="problem-icon">‚ùå</div>
            <h3>Unpredictable Costs</h3>
            <p>No optimization, bleeding money at scale</p>
          </div>
        </TextReveal>

        <TextReveal delay={600} client:load>
          <div class="problem-card">
            <div class="problem-icon">‚ùå</div>
            <h3>Technical Debt</h3>
            <p>Quick hacks that prevent growth</p>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- Transformation Framework -->
  <section class="framework-section" id="framework">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title">The Production Transformation Framework</h2>
        <p class="section-subtitle">Our proven 90-day methodology for scaling AI agents</p>
      </TextReveal>

      <div class="framework-timeline">
        <!-- Phase 1 -->
        <TextReveal delay={100} client:load>
          <div class="phase-card">
            <div class="phase-header">
              <div class="phase-number">Phase 1</div>
              <div class="phase-duration">Week 1-2</div>
            </div>
            <h3>Assessment & Planning</h3>
            <p class="phase-description">Deep dive into your prototype to identify strengths, weaknesses, and opportunities</p>
            <ul class="phase-deliverables">
              <li>Comprehensive prototype evaluation</li>
              <li>Performance benchmarking report</li>
              <li>Architecture assessment</li>
              <li>Risk analysis & mitigation plan</li>
              <li>Detailed ROI projection</li>
            </ul>
            <div class="phase-outcome">
              <strong>Outcome:</strong> Clear roadmap with timeline and success metrics
            </div>
          </div>
        </TextReveal>

        <!-- Phase 2 -->
        <TextReveal delay={200} client:load>
          <div class="phase-card">
            <div class="phase-header">
              <div class="phase-number">Phase 2</div>
              <div class="phase-duration">Week 3-6</div>
            </div>
            <h3>Re-architecture & Design</h3>
            <p class="phase-description">Rebuild foundation for scale, reliability, and performance</p>
            <ul class="phase-deliverables">
              <li>Production-grade architecture design</li>
              <li>Error handling & recovery systems</li>
              <li>Security hardening implementation</li>
              <li>Cost optimization strategy</li>
              <li>Integration planning & design</li>
            </ul>
            <div class="phase-outcome">
              <strong>Outcome:</strong> Battle-tested architecture blueprint
            </div>
          </div>
        </TextReveal>

        <!-- Phase 3 -->
        <TextReveal delay={300} client:load>
          <div class="phase-card">
            <div class="phase-header">
              <div class="phase-number">Phase 3</div>
              <div class="phase-duration">Week 7-10</div>
            </div>
            <h3>Implementation & Testing</h3>
            <p class="phase-description">Build production-ready system with comprehensive quality assurance</p>
            <ul class="phase-deliverables">
              <li>Production-grade codebase</li>
              <li>Comprehensive test suite</li>
              <li>Monitoring & observability setup</li>
              <li>Technical documentation</li>
              <li>Team knowledge transfer sessions</li>
            </ul>
            <div class="phase-outcome">
              <strong>Outcome:</strong> Fully tested, production-ready AI agent
            </div>
          </div>
        </TextReveal>

        <!-- Phase 4 -->
        <TextReveal delay={400} client:load>
          <div class="phase-card">
            <div class="phase-header">
              <div class="phase-number">Phase 4</div>
              <div class="phase-duration">Week 11-12</div>
            </div>
            <h3>Launch & Scale</h3>
            <p class="phase-description">Deploy with confidence and optimize for growth</p>
            <ul class="phase-deliverables">
              <li>Production deployment</li>
              <li>Performance optimization</li>
              <li>Scaling validation & stress testing</li>
              <li>Handover & operational playbooks</li>
              <li>30-day post-launch support</li>
            </ul>
            <div class="phase-outcome">
              <strong>Outcome:</strong> Live system with 99.9% uptime guarantee
            </div>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- Before vs After Comparison -->
  <section class="comparison-section">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title">Prototype vs. Enterprise-Ready</h2>
        <p class="section-subtitle">What changes when we transform your AI agent</p>
      </TextReveal>

      <div class="comparison-table">
        <div class="comparison-header">
          <div class="header-cell"></div>
          <div class="header-cell prototype">Prototype</div>
          <div class="header-cell production">Enterprise-Ready</div>
        </div>

        <TextReveal delay={100} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Performance</div>
            <div class="before-cell">2-3 second response</div>
            <div class="after-cell"><strong>&lt;200ms</strong> at scale</div>
          </div>
        </TextReveal>

        <TextReveal delay={150} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Operating Cost</div>
            <div class="before-cell">$10K/month unoptimized</div>
            <div class="after-cell"><strong>$3K/month</strong> optimized</div>
          </div>
        </TextReveal>

        <TextReveal delay={200} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Accuracy</div>
            <div class="before-cell">60% basic testing</div>
            <div class="after-cell"><strong>95%+</strong> production validated</div>
          </div>
        </TextReveal>

        <TextReveal delay={250} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Uptime</div>
            <div class="before-cell">Weekly crashes</div>
            <div class="after-cell"><strong>99.9%</strong> guaranteed</div>
          </div>
        </TextReveal>

        <TextReveal delay={300} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Scalability</div>
            <div class="before-cell">Single user demos</div>
            <div class="after-cell"><strong>1M+ requests/day</strong></div>
          </div>
        </TextReveal>

        <TextReveal delay={350} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Monitoring</div>
            <div class="before-cell">No visibility</div>
            <div class="after-cell"><strong>Full observability</strong> stack</div>
          </div>
        </TextReveal>

        <TextReveal delay={400} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Deployment</div>
            <div class="before-cell">Manual, error-prone</div>
            <div class="after-cell"><strong>Automated CI/CD</strong> pipeline</div>
          </div>
        </TextReveal>

        <TextReveal delay={450} client:load>
          <div class="comparison-row">
            <div class="metric-cell">Security</div>
            <div class="before-cell">Basic implementation</div>
            <div class="after-cell"><strong>Enterprise-grade</strong> security</div>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- Success Metrics -->
  <section class="metrics-section">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title">Real Results from Real Transformations</h2>
      </TextReveal>

      <div class="metrics-grid">
        <TextReveal delay={100} client:load>
          <div class="metric-card">
            <div class="metric-icon">üöÄ</div>
            <div class="metric-value">10x</div>
            <div class="metric-label">Average Performance Improvement</div>
          </div>
        </TextReveal>

        <TextReveal delay={200} client:load>
          <div class="metric-card">
            <div class="metric-icon">üí∞</div>
            <div class="metric-value">70%</div>
            <div class="metric-label">Cost Reduction at Scale</div>
          </div>
        </TextReveal>

        <TextReveal delay={300} client:load>
          <div class="metric-card">
            <div class="metric-icon">üìà</div>
            <div class="metric-value">99.9%</div>
            <div class="metric-label">Production Uptime</div>
          </div>
        </TextReveal>

        <TextReveal delay={400} client:load>
          <div class="metric-card">
            <div class="metric-icon">‚è±Ô∏è</div>
            <div class="metric-value">90 Days</div>
            <div class="metric-label">Average Time to Production</div>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- Investment Section -->
  <section class="investment-section">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title">Investment & ROI</h2>
        <p class="section-subtitle">Transparent pricing with measurable returns</p>
      </TextReveal>

      <div class="investment-content">
        <TextReveal delay={100} client:load>
          <div class="investment-card">
            <h3>How It Works</h3>
            <div class="investment-details">
              <div class="investment-item">
                <div class="item-icon">1Ô∏è‚É£</div>
                <div class="item-content">
                  <h4>Free Discovery Phase</h4>
                  <p>We assess your prototype and provide a detailed transformation plan at no cost</p>
                </div>
              </div>
              <div class="investment-item">
                <div class="item-icon">2Ô∏è‚É£</div>
                <div class="item-content">
                  <h4>Fixed-Price Engagement</h4>
                  <p>Transparent milestone-based pricing with no hidden costs</p>
                </div>
              </div>
              <div class="investment-item">
                <div class="item-icon">3Ô∏è‚É£</div>
                <div class="item-content">
                  <h4>Performance Guarantees</h4>
                  <p>We guarantee 99.9% uptime and defined performance benchmarks</p>
                </div>
              </div>
            </div>
          </div>
        </TextReveal>

        <TextReveal delay={200} client:load>
          <div class="roi-card">
            <h3>Typical ROI</h3>
            <div class="roi-stats">
              <div class="roi-item">
                <div class="roi-label">Time to ROI</div>
                <div class="roi-value">3-6 months</div>
              </div>
              <div class="roi-item">
                <div class="roi-label">Cost Savings</div>
                <div class="roi-value">40-70%</div>
              </div>
              <div class="roi-item">
                <div class="roi-label">Revenue Impact</div>
                <div class="roi-value">2-5x increase</div>
              </div>
            </div>
            <p class="roi-note">Based on average client outcomes across 100+ transformations</p>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title">Frequently Asked Questions</h2>
      </TextReveal>

      <div class="faq-grid">
        <TextReveal delay={100} client:load>
          <div class="faq-item">
            <h3>How much does it cost to productionize an AI agent?</h3>
            <p>Every engagement starts with a free discovery phase where we assess your prototype and provide a detailed, fixed-price proposal. Typical transformations range from $50K-$150K depending on complexity, with guaranteed ROI within 3-6 months.</p>
          </div>
        </TextReveal>

        <TextReveal delay={200} client:load>
          <div class="faq-item">
            <h3>Can you work with our existing prototype?</h3>
            <p>Absolutely! We work with prototypes built on any framework or technology stack. We'll assess what can be salvaged and what needs rebuilding to meet production standards.</p>
          </div>
        </TextReveal>

        <TextReveal delay={300} client:load>
          <div class="faq-item">
            <h3>How long until we see ROI?</h3>
            <p>Most clients see positive ROI within 3-6 months through a combination of cost savings (40-70% reduction in AI infrastructure costs) and revenue growth (2-5x increase from improved performance and reliability).</p>
          </div>
        </TextReveal>

        <TextReveal delay={400} client:load>
          <div class="faq-item">
            <h3>What if our prototype uses proprietary models?</h3>
            <p>We have extensive experience with proprietary, open-source, and hybrid AI models. Our framework is model-agnostic and focuses on the infrastructure, architecture, and operational excellence needed for production.</p>
          </div>
        </TextReveal>

        <TextReveal delay={500} client:load>
          <div class="faq-item">
            <h3>Do you provide ongoing support after launch?</h3>
            <p>Yes! Every transformation includes 30 days of post-launch support. We also offer ongoing managed services, SLA-based support contracts, and on-demand consulting for continued optimization.</p>
          </div>
        </TextReveal>

        <TextReveal delay={600} client:load>
          <div class="faq-item">
            <h3>What happens if we need to pivot during development?</h3>
            <p>Our agile methodology includes regular check-ins and milestone reviews. We can adapt to changing requirements while maintaining project timelines through our proven change management process.</p>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-background">
      <div class="cta-gradient"></div>
    </div>
    <div class="container">
      <TextReveal client:load>
        <div class="cta-content">
          <h2>Ready to Take Your Prototype to Production?</h2>
          <p>Get a free assessment of your AI prototype and a detailed transformation roadmap</p>
          <div class="cta-actions">
            <a href="mailto:hello@unravel.tech?subject=Free Prototype Assessment" class="btn btn-primary btn-lg">Get Free Assessment</a>
            <a href="/services" class="btn btn-secondary btn-lg">View All Services</a>
          </div>
          <p class="cta-note">No commitment required ‚Ä¢ Response within 24 hours</p>
        </div>
      </TextReveal>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero-section {
    padding: calc(var(--spacing-3xl) + 2rem) 0 var(--spacing-3xl) 0;
    background: linear-gradient(135deg, rgba(107, 196, 67, 0.03) 0%, rgba(0, 163, 204, 0.05) 100%);
  }

  .breadcrumb {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: var(--unravel-blue);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--unravel-green) 0%, var(--unravel-blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    max-width: 700px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
  }

  /* Problem Section */
  .problem-section {
    padding: var(--spacing-3xl) 0;
    background: white;
  }

  .problem-stat {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .problem-stat h2 {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    color: var(--color-error);
    margin-bottom: 1rem;
  }

  .problem-stat p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
  }

  .problems-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .problem-card {
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 12px;
    border-left: 4px solid var(--color-error);
  }

  .problem-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .problem-card h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-primary);
  }

  .problem-card p {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Framework Section */
  .framework-section {
    padding: var(--spacing-3xl) 0;
    background: var(--color-bg-secondary);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    margin-bottom: 3rem;
  }

  .framework-timeline {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .phase-card {
    background: white;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .phase-card:hover {
    border-color: var(--unravel-blue);
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 163, 204, 0.15);
  }

  .phase-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .phase-number {
    background: linear-gradient(135deg, var(--unravel-green), var(--unravel-blue));
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .phase-duration {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .phase-card h3 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .phase-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .phase-deliverables {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }

  .phase-deliverables li {
    padding: 0.5rem 0;
    color: var(--color-text-secondary);
    position: relative;
    padding-left: 1.5rem;
  }

  .phase-deliverables li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--unravel-green);
    font-weight: bold;
  }

  .phase-outcome {
    background: rgba(107, 196, 67, 0.1);
    padding: 1rem;
    border-radius: 8px;
    border-left: 4px solid var(--unravel-green);
  }

  .phase-outcome strong {
    color: var(--unravel-green);
  }

  /* Comparison Section */
  .comparison-section {
    padding: var(--spacing-3xl) 0;
    background: white;
  }

  .comparison-table {
    max-width: 900px;
    margin: 0 auto;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .comparison-header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    font-weight: 600;
  }

  .header-cell {
    text-align: center;
  }

  .header-cell.prototype {
    color: var(--color-error);
  }

  .header-cell.production {
    color: var(--unravel-green);
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
    align-items: center;
  }

  .comparison-row:last-child {
    border-bottom: none;
  }

  .metric-cell {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .before-cell {
    text-align: center;
    color: var(--color-text-secondary);
  }

  .after-cell {
    text-align: center;
    color: var(--unravel-green);
  }

  /* Metrics Section */
  .metrics-section {
    padding: var(--spacing-3xl) 0;
    background: linear-gradient(135deg, var(--unravel-green) 0%, var(--unravel-blue) 100%);
    color: white;
  }

  .metrics-section .section-title {
    color: white;
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .metric-card {
    text-align: center;
    padding: 2rem;
  }

  .metric-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .metric-value {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
