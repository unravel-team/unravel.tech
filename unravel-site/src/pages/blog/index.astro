---
import BaseLayout from '../../layouts/BaseLayout.astro';

const allPosts = await Astro.glob('./*.md');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime()
);
---

<BaseLayout 
  title="Blog | AI Consulting Insights"
  description="Expert insights on artificial intelligence, machine learning, and enterprise AI implementation."
>
  <section class="blog-list">
    <div class="container">
      <div class="posts-grid">
        {sortedPosts.map(post => {
          const formattedDate = new Intl.DateTimeFormat('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          }).format(new Date(post.frontmatter.pubDate));
          
          return (
            <article class="card post-card">
              <div class="post-card-content">
                <div class="post-card-header">
                  <h2 class="post-card-title">
                    <a href={post.url}>{post.frontmatter.title}</a>
                  </h2>
                  <p class="post-card-meta">
                    <span class="post-author">{post.frontmatter.author || 'AI Consulting Team'}</span>
                    <span class="post-date">{formattedDate}</span>
                  </p>
                </div>
                <p class="post-card-description">
                  {post.frontmatter.description}
                </p>
                {post.frontmatter.tags && post.frontmatter.tags.length > 0 && (
                  <div class="post-card-tags">
                    {post.frontmatter.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                <a href={post.url} class="read-more">
                  Read more &rarr;
                </a>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Blog Hero */
  .blog-hero {
    background: linear-gradient(135deg, rgba(230, 247, 250, 0.4) 0%, rgba(240, 248, 235, 0.4) 100%);
    padding: var(--spacing-3xl) 0;
    text-align: center;
  }

  .blog-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--spacing-md);
  }

  .blog-description {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Blog List */
  .blog-list {
    padding: var(--spacing-3xl) 0;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-xl);
  }

  .post-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card-header {
    margin-bottom: var(--spacing-lg);
  }

  .post-card-title {
    margin-bottom: var(--spacing-sm);
    font-size: var(--text-xl);
  }

  .post-card-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .post-card-title a:hover {
    color: var(--color-primary-500);
  }

  .post-card-meta {
    display: flex;
    gap: var(--spacing-md);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
    margin: 0;
  }

  .post-card-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: var(--leading-relaxed);
    flex-grow: 1;
  }

  .post-card-tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    margin-bottom: var(--spacing-lg);
  }

  .tag {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 12px;
    font-size: var(--text-xs);
    font-weight: 500;
  }

  .read-more {
    color: var(--color-primary-600);
    font-weight: 600;
    transition: color var(--transition-base);
    align-self: flex-start;
  }

  .read-more:hover {
    color: var(--color-primary-500);
    text-decoration: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-title {
      font-size: var(--text-3xl);
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .post-card-meta {
      flex-direction: column;
      gap: var(--spacing-xs);
    }
  }
</style>
