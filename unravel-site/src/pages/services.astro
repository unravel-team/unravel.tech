    <div class="container">
      <div class="services-grid">
        <!-- Prototype to Production - Featured -->
        <TextReveal delay={100} client:load>
          <div class="service-card featured">
            <div class="featured-badge">FEATURED</div>
            <div class="service-icon gradient">‚ö°</div>
            <h3>Prototype to Production</h3>
            <p>Transform your proof-of-concept into an enterprise-grade AI agent that scales</p>
