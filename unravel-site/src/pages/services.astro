---
import BaseLayout from '../layouts/BaseLayout.astro';
import ParallaxSection from '../components/ParallaxSection';
import TextReveal from '../components/TextReveal';
import ScrollProgress from '../components/ScrollProgress';
---

<ScrollProgress client:load />

<BaseLayout 
  title="AI Services | Unravel"
  description="Transform AI prototypes into enterprise-ready production systems. Expert AI implementation, consulting, and cost optimization services."
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-background">
      <div class="hero-gradient"></div>
      <ParallaxSection speed={0.5} className="parallax-layer" client:load>
        <div class="floating-shape shape-1"></div>
      </ParallaxSection>
      <ParallaxSection speed={0.3} className="parallax-layer" client:load>
        <div class="floating-shape shape-2"></div>
      </ParallaxSection>
    </div>
    
    <div class="container hero-content">
      <TextReveal delay={200} client:load>
        <div class="hero-badge">SERVICES</div>
      </TextReveal>
      <TextReveal delay={400} client:load>
        <h1 class="hero-title">
          From AI <span class="highlight-green">Prototype</span><br/>
          to <span class="highlight-blue">Enterprise-Ready</span> Production
        </h1>
      </TextReveal>
      <TextReveal delay={600} client:load>
        <p class="hero-subtitle">
          We transform experimental AI agents into stable, scalable systems that deliver measurable business outcomes
        </p>
      </TextReveal>
      <TextReveal delay={800} client:load>
        <div class="hero-actions">
          <a href="/services/prototype-to-production" class="btn btn-primary btn-lg">See How We Transform AI</a>
          <a href="#services-overview" class="btn btn-secondary btn-lg">Explore Services</a>
