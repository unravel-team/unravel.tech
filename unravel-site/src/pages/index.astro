---
import BaseLayout from '../layouts/BaseLayout.astro';
import ParallaxSection from '../components/ParallaxSection';
import TextReveal from '../components/TextReveal';
import ScrollProgress from '../components/ScrollProgress';
---

<ScrollProgress client:load />

<BaseLayout 
  title="Unravel | AI Consulting & Solutions"
  description="Transform your business with cutting-edge AI solutions. Expert consulting in machine learning, NLP, and predictive analytics."
>
  <!-- Hero Section with Parallax -->
  <section class="hero-scroll snap-section">
    <div class="hero-background">
      <div class="hero-gradient"></div>
      <ParallaxSection speed={0.5} className="parallax-layer layer-1" client:load>
        <div class="floating-shape shape-1"></div>
      </ParallaxSection>
      <ParallaxSection speed={0.3} className="parallax-layer layer-2" client:load>
        <div class="floating-shape shape-2"></div>
      </ParallaxSection>
      <ParallaxSection speed={0.7} className="parallax-layer layer-3" client:load>
        <div class="floating-shape shape-3"></div>
      </ParallaxSection>
    </div>
    
    <div class="hero-content">
      <div class="container">
        <TextReveal delay={200} client:load>
          <div class="hero-badge">AI TRANSFORMATION</div>
        </TextReveal>
        <TextReveal delay={400} client:load>
          <h1 class="hero-title">
            <span class="un">Un</span><span class="ravel">ravel</span> the Future<br/>
            of <span class="gradient-text">Artificial Intelligence</span>
          </h1>
        </TextReveal>
        <TextReveal delay={600} client:load>
          <p class="hero-subtitle">
            Transform complexity into clarity. We help businesses harness the power of AI 
            to drive innovation, efficiency, and growth.
          </p>
        </TextReveal>
        <TextReveal delay={800} client:load>
          <div class="hero-actions">
            <a href="#contact" class="btn btn-primary">Start Your Journey</a>
            <a href="#services" class="btn btn-secondary">Explore Solutions</a>
          </div>
        </TextReveal>
      </div>
    </div>
    
    <div class="scroll-indicator">
      <div class="mouse">
        <div class="wheel"></div>
      </div>
      <p>Scroll to explore</p>
    </div>
  </section>

  <!-- Mission Statement -->
  <section class="mission-section snap-section">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title-large">
          We transform the <span class="highlight-green">tangled complexity</span> 
          of AI into <span class="highlight-blue">clear, actionable solutions</span>
        </h2>
      </TextReveal>
    </div>
  </section>

  <!-- Horizontal Scroll Services -->
  <section class="services-horizontal snap-section">
    <div class="container-full">
      <TextReveal client:load>
        <div class="section-header">
          <h2>Our Expertise</h2>
          <p class="text-muted">Comprehensive AI solutions for modern businesses</p>
        </div>
      </TextReveal>
      
      <div class="horizontal-scroll-wrapper">
        <div class="service-cards-horizontal">
          <div class="service-card-large">
            <div class="service-icon">ü§ñ</div>
            <h3>Machine Learning</h3>
            <p>Build intelligent systems that learn and adapt. From predictive models to recommendation engines that drive business value.</p>
            <ul class="service-features">
              <li>Predictive Analytics</li>
              <li>Recommendation Systems</li>
              <li>Anomaly Detection</li>
              <li>Time Series Forecasting</li>
            </ul>
          </div>

          <div class="service-card-large">
            <div class="service-icon">üí¨</div>
            <h3>Natural Language Processing</h3>
            <p>Extract insights from text, automate customer interactions, and understand human language at scale.</p>
            <ul class="service-features">
              <li>Chatbots & Virtual Assistants</li>
              <li>Sentiment Analysis</li>
              <li>Document Processing</li>
              <li>Language Translation</li>
            </ul>
          </div>

          <div class="service-card-large">
            <div class="service-icon">üëÅÔ∏è</div>
            <h3>Computer Vision</h3>
            <p>Enable machines to see, understand, and process visual information with cutting-edge deep learning.</p>
            <ul class="service-features">
              <li>Object Detection</li>
              <li>Image Classification</li>
              <li>Facial Recognition</li>
              <li>Quality Control</li>
            </ul>
          </div>

          <div class="service-card-large">
            <div class="service-icon">üìä</div>
            <h3>Data Analytics</h3>
            <p>Turn raw data into actionable insights with advanced analytics and visualization solutions.</p>
            <ul class="service-features">
              <li>Business Intelligence</li>
              <li>Real-time Analytics</li>
              <li>Data Visualization</li>
              <li>Performance Metrics</li>
            </ul>
          </div>

          <div class="service-card-large">
            <div class="service-icon">üéØ</div>
            <h3>AI Strategy</h3>
            <p>Develop comprehensive AI roadmaps aligned with your business goals and technical capabilities.</p>
            <ul class="service-features">
              <li>AI Readiness Assessment</li>
              <li>Technology Selection</li>
              <li>ROI Planning</li>
              <li>Change Management</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats with Parallax -->
  <section class="stats-parallax snap-section">
    <ParallaxSection speed={0.2} client:load>
      <div class="container">
        <div class="stats-grid">
          <TextReveal delay={100} client:load>
            <div class="stat-item">
              <div class="stat-number">500+</div>
              <div class="stat-label">Projects Delivered</div>
            </div>
          </TextReveal>
          <TextReveal delay={200} client:load>
            <div class="stat-item">
              <div class="stat-number">95%</div>
              <div class="stat-label">Client Satisfaction</div>
            </div>
          </TextReveal>
          <TextReveal delay={300} client:load>
            <div class="stat-item">
              <div class="stat-number">10+</div>
              <div class="stat-label">Years Experience</div>
            </div>
          </TextReveal>
          <TextReveal delay={400} client:load>
            <div class="stat-item">
              <div class="stat-number">35%</div>
              <div class="stat-label">Avg ROI Increase</div>
            </div>
          </TextReveal>
        </div>
      </div>
    </ParallaxSection>
  </section>

  <!-- Process Section -->
  <section class="process-section snap-section">
    <div class="container">
      <TextReveal client:load>
        <h2 class="section-title">Our Approach</h2>
        <p class="section-subtitle">A proven methodology for AI success</p>
      </TextReveal>

      <div class="process-timeline">
        <TextReveal delay={100} client:load>
          <div class="process-step">
            <div class="step-number">01</div>
            <h3>Discovery</h3>
            <p>We dive deep into your business challenges, data landscape, and strategic objectives to identify high-impact AI opportunities.</p>
          </div>
        </TextReveal>

        <TextReveal delay={200} client:load>
          <div class="process-step">
            <div class="step-number">02</div>
            <h3>Design</h3>
            <p>Our team architects tailored AI solutions that align with your technical infrastructure and business requirements.</p>
          </div>
        </TextReveal>

        <TextReveal delay={300} client:load>
          <div class="process-step">
            <div class="step-number">03</div>
            <h3>Development</h3>
            <p>We build robust, scalable AI models using cutting-edge technologies and industry best practices.</p>
          </div>
        </TextReveal>

        <TextReveal delay={400} client:load>
          <div class="process-step">
            <div class="step-number">04</div>
            <h3>Deployment</h3>
            <p>Seamless integration into your existing systems with comprehensive monitoring and support.</p>
          </div>
        </TextReveal>
      </div>
    </div>
  </section>

  <!-- Testimonial Parallax -->
  <section class="testimonial-section snap-section">
    <ParallaxSection speed={0.3} client:load>
      <div class="container">
        <TextReveal client:load>
          <div class="testimonial-card">
            <div class="quote-icon">"</div>
            <p class="testimonial-text">
              Unravel transformed our data chaos into actionable insights. Their AI solutions 
              increased our operational efficiency by 40% in just six months.
            </p>
            <div class="testimonial-author">
              <div class="author-name">Sarah Johnson</div>
              <div class="author-title">CTO, TechCorp Industries</div>
            </div>
          </div>
        </TextReveal>
      </div>
    </ParallaxSection>
  </section>

  <!-- CTA Section -->
  <section class="cta-section snap-section">
    <div class="cta-background">
      <div class="cta-gradient"></div>
    </div>
    <div class="container">
      <TextReveal client:load>
        <div class="cta-content">
          <h2>Ready to Unravel Your AI Potential?</h2>
          <p>Let's transform your business with intelligent solutions that deliver real results.</p>
          <div class="cta-actions">
            <a href="mailto:hello@unravel.tech" class="btn btn-primary btn-lg">Get in Touch</a>
            <a href="/talks" class="btn btn-secondary btn-lg">View Our Work</a>
          </div>
        </div>
      </TextReveal>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero with Parallax */
  .hero-scroll {
    min-height: 100vh;
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--spacing-3xl) 0;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(107, 196, 67, 0.03) 0%, 
      rgba(0, 163, 204, 0.05) 50%,
      rgba(107, 196, 67, 0.02) 100%
    );
  }

  .parallax-layer {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .floating-shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.4;
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: var(--unravel-green);
    top: 10%;
    left: 10%;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    background: var(--unravel-blue);
    bottom: 20%;
    right: 15%;
  }

  .shape-3 {
    width: 250px;
    height: 250px;
    background: var(--unravel-teal);
    top: 50%;
    right: 30%;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(0, 163, 204, 0.1);
    color: var(--unravel-blue);
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
    border: 2px solid rgba(0, 163, 204, 0.2);
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .hero-title .un {
    color: var(--unravel-green);
  }

  .hero-title .ravel {
    color: var(--unravel-blue);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--unravel-green) 0%, var(--unravel-blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    z-index: 2;
    animation: bounce 2s infinite;
  }

  .mouse {
    width: 30px;
    height: 50px;
    border: 2px solid var(--unravel-blue);
    border-radius: 15px;
    margin: 0 auto 0.5rem;
    position: relative;
  }

  .wheel {
    width: 4px;
    height: 8px;
    background: var(--unravel-blue);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll-wheel 2s infinite;
  }

  @keyframes scroll-wheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 20px;
      opacity: 0.5;
    }
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }

  .scroll-indicator p {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Text Reveal Animation */
  :global(.text-reveal) {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global(.text-reveal.visible) {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mission Section */
  .mission-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: linear-gradient(180deg, 
      rgba(248, 250, 251, 0) 0%, 
      rgba(248, 250, 251, 1) 50%,
      rgba(248, 250, 251, 0) 100%
    );
  }

  .section-title-large {
    font-size: clamp(2rem, 4vw, 3.5rem);
    line-height: 1.3;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
    font-weight: 600;
  }

  .highlight-green {
    color: var(--unravel-green);
    position: relative;
  }

  .highlight-blue {
    color: var(--unravel-blue);
    position: relative;
  }

  /* Horizontal Scroll Services */
  .services-horizontal {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  .container-full {
    width: 100%;
    padding: 0 var(--spacing-lg);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
  }

  .horizontal-scroll-wrapper {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--unravel-blue) transparent;
  }

  .horizontal-scroll-wrapper::-webkit-scrollbar {
    height: 8px;
  }

  .horizontal-scroll-wrapper::-webkit-scrollbar-track {
    background: rgba(0, 163, 204, 0.1);
    border-radius: 4px;
  }

  .horizontal-scroll-wrapper::-webkit-scrollbar-thumb {
    background: var(--unravel-blue);
    border-radius: 4px;
  }

  .service-cards-horizontal {
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
    min-width: min-content;
  }

  .service-card-large {
    min-width: 350px;
    max-width: 350px;
    background: white;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .service-card-large:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(0, 163, 204, 0.15);
    border-color: var(--unravel-blue);
  }

  .service-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--unravel-green), var(--unravel-blue));
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .service-card-large h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .service-card-large p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    padding: 0.5rem 0;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .service-features li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--unravel-green);
    font-weight: bold;
  }

  /* Stats Parallax */
  .stats-parallax {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: linear-gradient(135deg, var(--unravel-green) 0%, var(--unravel-blue) 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    text-align: center;
  }

  .stat-number {
    font-size: clamp(3rem, 6vw, 4.5rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .stat-label {
    font-size: 1.125rem;
    opacity: 0.95;
  }

  /* Process Section */
  .process-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: var(--color-bg-secondary);
  }
  
  .process-section .container {
    width: 100%;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    margin-bottom: 4rem;
  }

  .process-timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .process-step {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }

  .process-step:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(107, 196, 67, 0.15);
  }

  .step-number {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--unravel-green), var(--unravel-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 1rem;
  }

  .process-step h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .process-step p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Testimonial Section */
  .testimonial-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: var(--color-bg-primary);
  }

  .testimonial-card {
    max-width: 900px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .quote-icon {
    font-size: 6rem;
    color: var(--unravel-blue);
    opacity: 0.1;
    position: absolute;
    top: 1rem;
    left: 2rem;
    line-height: 1;
  }

  .testimonial-text {
    font-size: 1.5rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-bottom: 2rem;
    position: relative;
    z-index: 1;
  }

  .testimonial-author {
    text-align: left;
    border-top: 2px solid rgba(0, 163, 204, 0.1);
    padding-top: 1.5rem;
  }

  .author-name {
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  .author-title {
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  /* CTA Section */
  .cta-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(6rem, 12vh, 10rem) 0;
    position: relative;
    overflow: hidden;
  }

  .cta-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .cta-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(107, 196, 67, 0.05) 0%, 
      rgba(0, 163, 204, 0.08) 100%
    );
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cta-content h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1.5rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-scroll {
      min-height: 100vh;
      height: 100vh;
      padding: var(--spacing-2xl) 0;
    }

    .floating-shape {
      filter: blur(40px);
    }

    .shape-1 {
      width: 250px;
      height: 250px;
    }

    .shape-2 {
      width: 200px;
      height: 200px;
    }

    .shape-3 {
      width: 150px;
      height: 150px;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 300px;
    }

    .scroll-indicator {
      display: none;
    }

    /* Services Section - Compact content within viewport */
    .section-header {
      margin-bottom: 2rem;
    }

    .service-card-large {
      min-width: 280px;
      max-width: 280px;
      padding: 1.5rem;
    }

