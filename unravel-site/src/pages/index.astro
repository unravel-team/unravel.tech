  </section>

  <!-- Stats with Parallax -->
  <section class="stats-parallax snap-section">
    <ParallaxSection speed={0.2} client:load>
      <div class="container">
        <div class="stats-grid">
          <TextReveal delay={100} client:load>
            <div class="stat-item">
              <div class="stat-number">4 months</div>
              <div class="stat-label">From concept to production</div>
