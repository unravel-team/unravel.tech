</BaseLayout>

<style>
  /* Hero with Parallax */
  .hero-scroll {
    min-height: 100vh;
    height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--spacing-3xl) 0;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(111, 191, 63, 0.03) 0%, 
      rgba(111, 191, 63, 0.05) 50%,
      rgba(14, 159, 188, 0.02) 100%
    );
  }

  .parallax-layer {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .floating-shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: var(--unravel-green);
    top: 10%;
    left: 10%;
    opacity: 0.3;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    background: var(--unravel-green);
    bottom: 20%;
    right: 15%;
    opacity: 0.15;
  }

  .shape-3 {
    width: 250px;
    height: 250px;
    background: var(--green-light);
    top: 50%;
    right: 30%;
    opacity: 0.2;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(111, 191, 63, 0.1);
    color: var(--unravel-green);
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
    border: 2px solid rgba(111, 191, 63, 0.2);
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .hero-title .un {
    color: var(--unravel-green);
  }

  .hero-title .ravel {
    color: var(--unravel-blue);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--unravel-green) 0%, var(--green-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    z-index: 2;
    animation: bounce 2s infinite;
  }

  .mouse {
    width: 30px;
    height: 50px;
    border: 2px solid var(--unravel-green);
    border-radius: 15px;
    margin: 0 auto 0.5rem;
    position: relative;
  }

  .wheel {
    width: 4px;
    height: 8px;
    background: var(--unravel-green);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll-wheel 2s infinite;
  }

  @keyframes scroll-wheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 20px;
      opacity: 0.5;
    }
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-10px);
    }
  }

  .scroll-indicator p {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Text Reveal Animation */
  :global(.text-reveal) {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global(.text-reveal.visible) {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mission Section */
  .mission-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: linear-gradient(180deg, 
      rgba(248, 250, 251, 0) 0%, 
      rgba(248, 250, 251, 1) 50%,
      rgba(248, 250, 251, 0) 100%
    );
  }

  .section-title-large {
    font-size: clamp(2rem, 4vw, 3.5rem);
    line-height: 1.3;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
    font-weight: 600;
  }

  .highlight-green {
    color: var(--unravel-green);
    position: relative;
  }

  .highlight-black {
    color: var(--unravel-black);
    position: relative;
  }

  /* Horizontal Scroll Services */
  .services-horizontal {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  .container-full {
    width: 100%;
    padding: 0 var(--spacing-lg);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
  }

  .horizontal-scroll-wrapper {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--unravel-blue) transparent;
  }

  .horizontal-scroll-wrapper::-webkit-scrollbar {
    height: 8px;
  }

  .horizontal-scroll-wrapper::-webkit-scrollbar-track {
    background: rgba(111, 191, 63, 0.1);
    border-radius: 4px;
  }

  .horizontal-scroll-wrapper::-webkit-scrollbar-thumb {
    background: var(--unravel-blue);
    border-radius: 4px;
  }

  .service-cards-horizontal {
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
    min-width: min-content;
  }

  .service-card-large {
    min-width: 350px;
    max-width: 350px;
    background: white;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .service-card-large:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(111, 191, 63, 0.15);
    border-color: var(--unravel-blue);
  }

  .service-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, var(--unravel-green), var(--green-dark));
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .service-card-large h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .service-card-large p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    padding: 0.5rem 0;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .service-features li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--unravel-green);
    font-weight: bold;
  }

  /* Stats Parallax */
  .stats-parallax {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: var(--color-bg-gradient-vibrant);
    color: var(--color-text-primary);
    position: relative;
    overflow: hidden;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    text-align: center;
  }

  .stat-number {
    font-size: clamp(3rem, 6vw, 4.5rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .stat-label {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
  }

  /* Process Section */
  .process-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: clamp(4rem, 10vh, 8rem) 0;
    background: var(--color-bg-secondary);
  }
  
  .process-section .container {
    width: 100%;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    margin-bottom: 4rem;
  }

  .process-timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .process-step {
    background: white;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }

  .process-step:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(111, 191, 63, 0.15);
  }

  .step-number {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--unravel-green), var(--green-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
