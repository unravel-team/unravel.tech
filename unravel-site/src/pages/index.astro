<script>
  import { trackHeroInteraction, trackServiceCTAClick, trackContactAttempt } from '../lib/posthog';

  function initHomepageTracking() {
    // Track hero CTA clicks
    const heroPrimaryCta = document.querySelector('.hero-actions .btn-primary');
    const heroSecondaryCta = document.querySelector('.hero-actions .btn-secondary');

    if (heroPrimaryCta) {
      heroPrimaryCta.addEventListener('click', () => {
        trackHeroInteraction('cta_click', 'Start Your Journey');
      });
    }

    if (heroSecondaryCta) {
      heroSecondaryCta.addEventListener('click', () => {
        trackHeroInteraction('cta_click', 'Explore Solutions');
      });
    }

    // Track service card interactions
    const serviceCards = document.querySelectorAll('.service-card-large');
    serviceCards.forEach((card, index) => {
      const serviceName = card.querySelector('h3')?.textContent || `Service ${index + 1}`;
      
      // Track when service cards come into view
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            trackServiceCTAClick(serviceName, 'view', 'homepage_horizontal_scroll');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.5 });
      
      observer.observe(card);

      // Track clicks on service cards
      card.addEventListener('click', () => {
        trackServiceCTAClick(serviceName, 'card_click', 'homepage');
      });
    });

    // Track CTA section clicks
    const ctaPrimaryButton = document.querySelector('.cta-section .btn-primary');
    const ctaSecondaryButton = document.querySelector('.cta-section .btn-secondary');

    if (ctaPrimaryButton) {
      ctaPrimaryButton.addEventListener('click', () => {
        trackContactAttempt('email', 'homepage_cta');
      });
    }

    if (ctaSecondaryButton) {
      ctaSecondaryButton.addEventListener('click', () => {
        trackServiceCTAClick('View Work', 'cta_click', 'homepage_bottom');
      });
    }

    // Track scroll to services section (indicates interest)
    const servicesSection = document.querySelector('.services-horizontal');
    if (servicesSection) {
      const servicesObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            trackHeroInteraction('scroll_to_services', 'Services Section');
            servicesObserver.unobserve(entry.target);
          }
        });
      }, { threshold: 0.3 });
      
      servicesObserver.observe(servicesSection);
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHomepageTracking);
  } else {
    initHomepageTracking();
  }

  // Re-initialize after navigation
  document.addEventListener('astro:page-load', initHomepageTracking);
</script>
