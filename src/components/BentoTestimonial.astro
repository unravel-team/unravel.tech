---
interface Props {
  quote: string;
  authorName: string;
  authorTitle: string;
  authorLinkedIn?: string;
}

const { 
  quote,
  authorName,
  authorTitle,
  authorLinkedIn
} = Astro.props;
---

<div class="bento-testimonial">
  <div class="bento-quote">‚ùù</div>
  
  <p class="testimonial-quote">{quote}</p>
  
  <div class="bento-author">
    <div class="bento-author-name">{authorName}</div>
    <div class="bento-author-title">{authorTitle}</div>
    
    {authorLinkedIn && (
      <a href={authorLinkedIn} target="_blank" rel="noopener noreferrer" class="author-linkedin">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
        </svg>
        LinkedIn
      </a>
    )}
  </div>
</div>

<style>
  .bento-testimonial {
    padding: 2rem;
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .bento-quote {
    font-size: 4rem;
    color: var(--unravel-green);
    opacity: 0.15;
    line-height: 1;
    position: absolute;
    top: 1rem;
    left: 1.5rem;
    font-family: serif;
    pointer-events: none;
  }

  .testimonial-quote {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    margin-bottom: 2rem;
    position: relative;
    z-index: 1;
    font-style: italic;
    flex-grow: 1;
  }

  .bento-author {
    padding-top: 1.5rem;
    border-top: 2px solid rgba(111, 191, 63, 0.1);
  }

  .bento-author-name {
    font-weight: 700;
    color: var(--color-text-primary);
    font-size: 1rem;
  }

  .bento-author-title {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    margin-top: 0.25rem;
  }

  .author-linkedin {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--unravel-blue);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    margin-top: 0.75rem;
  }

  .author-linkedin:hover {
    color: var(--unravel-green);
    transform: translateX(2px);
  }

  .author-linkedin svg {
    flex-shrink: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .bento-testimonial {
      padding: var(--spacing-md);
    }

    .testimonial-quote {
      font-size: 1rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .author-linkedin:hover {
      transform: none;
    }
  }
</style>
